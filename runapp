#!/bin/bash

if [[ "$VIRTUAL_ENV" != "" ]]
then
	echo "Running in $VIRTUAL_ENV"
	export FLASK_APP=app
	export FLASK_ENV=development
	flask create_tables
	flask run --host=0.0.0.0
else
	echo "Not running in (venv)"
	echo "Launching (venv)"
	export FLASK_APP=app
	export FLASK_ENV=development
	flask create_tables
	flask run --host=0.0.0.0
fi

exit 0

